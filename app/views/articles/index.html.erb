<h1>Articles</h1>

<% @articles.each do |article| %>
  <div style="text-align: center;">
    <h2 style="color: blue;"><a href="<%= article_path(article) %>"><%= article.title %></a></h2>
    <p><%= truncate(article.content, length: 50) %></p>
  </div>
<% end %>
